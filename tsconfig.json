{
    "compilerOptions": {
      "baseUrl": ".",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": false,
      "jsx": "react",
      "jsxFactory": "h",
      "lib": ["dom", "esnext"],
      "module": "esnext",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "noImplicitReturns": false,
      "noUnusedLocals": false,
      "outDir": "public",
      "sourceMap": true,
      "allowJs": true,
      "strict": false,
      "target": "es5",
      "paths": {
        "/web_modules/*.js": [
          "node_modules/@types/*",
          "node_modules/*",
          "public/web_modules/*"
        ]
      }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
  }